<%= "#{@person.name} is assigned to following Tasks:" %> <br />
<% @connections.each do |conn| %>
  <% @tasks = id2task(conn.task_id) %>
  <% @tasks.each do |task| %>
    <%= link_to "#{task.name}", task_path(task.id) %>
    <%= link_to "Release", person_task_release_path(@person, task)  %> <br />
  <% end %>
<% end %>